# should rfiod run?
# any string but "yes" will equivalent to "NO"
#
RUN_RFIOD="<%= @active %>"
#
# should we run with another limit on the number of file descriptors than the default?
# any string will be passed to ulimit -n
#ULIMIT_N=<%= @ulimitn %>
#
###############################################################################################
# Change and uncomment the variables below if your setup is different than the one by default #
###############################################################################################

######################
# DPM RFIO variables #
######################

# Nameserver and dpm hosts
DPNS_HOST="<%= @nshost %>"
DPM_HOST="<%= @dpmhost %>"
export DPNS_HOST
export DPM_HOST

# - RFIO log file :
RFIOLOGFILE=/var/log/rfio/log

###################
# RFIO Port Range #
###################

# - RFIO port range :
RFIO_PORT_RANGE="<%= @portrange %>"

###################
# Globus variable #
###################

# - gridmapdir location
#GRIDMAPDIR=/etc/grid-security/gridmapdir

X509_USER_KEY="/etc/grid-security/<%=@lcgdm_user%>/<%=@lcgdm_certkey%>"
X509_USER_CERT="/etc/grid-security/<%=@lcgdm_user%>/<%=@lcgdm_cert%>"
export X509_USER_KEY
export X509_USER_CERT

#########################
# RFIOD Startup Options #
#########################

OPTIONS="<%= @startoptions %>"

# - make sure we use globus pthread model$
GLOBUS_THREAD_MODEL="pthread"
export GLOBUS_THREAD_MODEL
